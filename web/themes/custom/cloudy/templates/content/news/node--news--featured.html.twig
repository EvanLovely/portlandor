<div class="teaser d-flex flex-column align-items-start mb-5">
  <h3 class="order-2">
    <a href="{{ url }}" rel="bookmark">
      {{ label }}</a>
  </h3>
  {% if node.field_summary.value %}
    <div class="order-3">
      {% if node.field_featured_image %}
      <div class="float-right image-align paragraph">
        <figure class="figure">
          {{ node.field_featured_image | responsive_image_style('paragraph') }}
        </figure>
      </div>
      {% endif %}
      <p>{{ node.field_summary.value }}</p>
    </div>
  {% endif %}

  {{ kint(content) }}
  {% if node.field_news_type.value %}
    <span class="badge badge-pill badge-light mb-1 order-1 align-self-start">
      <span class="sr-only">Type is</span>
      {% for i, news_type in node.field_news_type %}
          {% if node.field_news_type[i].entity %}
            {% set news_type = {
                url: path('entity.taxonomy_term.canonical', {'taxonomy_term': node.field_news_type[i].entity.id}),
                title: node.field_news_type[i].entity.name.value,
              }%}
              {{ news_type.title }}
          {% endif %}
      {% endfor %}
    </span>
  {% endif %}
  {% if node.field_topics.value or node.field_audience.value %}
    {% spaceless %}
      <div{{attributes.addClass('teaser__tags','order-4')}}>
        <span class="sr-only">Tagged in</span>
        {% for i, topic in node.field_topics %}
          {% if node.field_topics[i].entity %}
            {% set topic = {
                url: path('entity.taxonomy_term.canonical', {'taxonomy_term': node.field_topics[i].entity.id}),
                title: node.field_topics[i].entity.name.value,
              }%}
            <a href="{{ topic.url }}" class="teaser__tag small">
              {{ topic.title }}</a>
          {% endif %}
        {% endfor %}
        {% for i, audience in node.field_audience %}
          {% if node.field_audience[i].entity %}
            {% set audience = {
                url: path('entity.taxonomy_term.canonical', {'taxonomy_term': node.field_audience[i].entity.id}),
                title: node.field_audience[i].entity.name.value,
              }%}
            <a href="{{ audience.url }}" class="teaser__tag small">
              {{ audience.title }}</a>
          {% endif %}
        {% endfor %}
      </div>
    {% endspaceless %}
  {% endif %}
</div>
